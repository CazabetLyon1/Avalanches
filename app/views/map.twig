                </div>
                <div class="col-md-6">
                  <span>Indemnes : </span>
                  <span id="indemnes">3</span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Orientation : </span>
                  <span id="orientation">3</span>
                </div>
                <div class="col-md-6">
                  <span>Activité : </span>
                  <span id="activité">3</span>
                </div>
              </div>           
            </div>
            <div id="checkbox">
              <input id="check" type="checkbox" checked data-toggle="toggle" data-on="Afficher<br>Photo interprétation " data-off="Afficher<br>Avalanches" data-onstyle="success" data-offstyle="danger" onchange="handleChange(event)">
            </div>
          </div>
          <div id="mapid" class="col-md-9"></div>
        </div>
        <div class="row">
          <div class="col-md-4_offset-4" id="info"></div>
        </div>
      </div>

    <!-- Création de la map -->
     <script src="{{ base_url() }}/js/affichageMap.js"</script>
     <script src="//d3js.org/d3.v3.min.js" charset="utf-8"></script>
    
    {% endblock %}
    

