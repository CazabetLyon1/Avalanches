    
    {% extends "layout.twig" %}

    {% block content %}
      <div class="container-fluid">
        <div class="row">
          <div id="menuGauche" class="col-md-3">
            <div id ="infos">
              <div class="row menuGauche titre">
                <h1>Infos sur l'avalanche</h1>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span>Date : </span>
                  <span id="date">3</span>
                </div>
                <div class="col-md-6">
                  <span >Groupe : </span>
                  <span id="groupe">3</span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Commune : </span>
                  <span id="commune">3</span>
                </div>
                <div class="col-md-6">
                  <span>Emportés : </span>
                  <span id="emportes">3</span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Massif : </span>
                  <span id="massif">3</span>
                </div>
                <div class="col-md-6">
                  <span>Blessés : </span>
                  <span id="blesses">3</span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Site : </span>
                  <span id="site">3</span>
                </div>
                <div class="col-md-6">
                  <span>Décédés : </span>
                  <span id="decedes">3</span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Neige : </span>
