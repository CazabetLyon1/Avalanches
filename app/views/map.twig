    
    {% extends "layout.twig" %}

    {% block content %}
      <div class="container-fluid">
        <div class="row">
          <div id="menuGauche" class="col-md-3">
            <div id ="infos">
              <div class="row menuGauche titre">
                <h1>Infos sur l'avalanche</h1>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span>Date : </span>
                  <span id="date"></span>
                </div>
                <div class="col-md-6">
                  <span >Cause : </span>
                  <span id="cause"></span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Commune : </span>
                  <span id="commune"></span>
                </div>
                <div class="col-md-6">
                  <span>Emportés : </span>
                  <span id="emportes"></span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Massif : </span>
                  <span id="massif"></span>
                </div>
                <div class="col-md-6">
                  <span>Blessés : </span>
                  <span id="blesses"></span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Site : </span>
                  <span id="site"></span>
                </div>
                <div class="col-md-6">
                  <span>Décédés : </span>
                  <span id="decedes"></span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Neige : </span>
                  <span id="neige"></span>
                </div>
                <div class="col-md-6">
                  <span>Indemnes : </span>
                  <span id="indemnes"></span>
                </div>
              </div>
              <div class="row menuGauche">
                <div class="col-md-6">
                  <span >Orientation : </span>
                  <span id="orientation"></span>
                </div>
                <div class="col-md-6">
                  <span>Activité : </span>
                  <span id="activité"></span>
                </div>
              </div>           
            </div>
            <div id="checkbox">
              <input id="check" type="checkbox" checked data-toggle="toggle" data-on="Afficher<br>Photo interprétation " data-off="Afficher<br>Avalanches" data-onstyle="success" data-offstyle="danger" onchange="handleChange(event)">
            </div>
          </div>
          <div id="mapid" class="col-md-9"></div>
        </div>
        <div class="row">
          <div class="col-md-4_offset-4" id="info"></div>
        </div>
      </div>

    <!-- Création de la map -->
     <script src="../public/js/affichageMap.js"</script>
     <script src="//d3js.org/d3.v3.min.js" charset="utf-8"></script>
    
    {% endblock %}
    

